const display = (img,n) => {
//console.log(n)
if (n = null) n = 2000;
else n = n*10000;

function displayImage() {
    var image = document.querySelector( 'img' )
        if( image === null ) {
        document.body.appendChild( img )
      }
      else{
        document.body.replaceChild( img, image)
      }
      index++
      if (index > 10) index = 1;
      //console.log("index " + index);
    //  console.log("image: " + img + image);
      walk.src='tagged/walk/' + index + '.jpg';
}



setInterval(displayImage,6000);

}

}

movement = (duck / walk / stomachspiral / fall / rest / flick )+

